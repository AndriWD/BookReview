
@{
    ViewBag.Title = "AdvancedFilter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Розширений фільтр</h2>
<div class="container">
    <div class="row align-items-start">
        <div class="col">
            @(Ajax.BeginForm("AdvancedFilter", new AjaxOptions { UpdateTargetId = "results", LoadingElementId="loading", LoadingElementDuration=500, InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin"}))
            {
            <p>Виберіть, що шукаєте: </p>
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                <input type="radio" class="btn-check" name="type" id="type1" autocomplete="off" checked>
                <label class="btn btn-outline-primary" for="author">Автор</label>

                <input type="radio" class="btn-check" name="type" id="type2" autocomplete="off">
                <label class="btn btn-outline-primary" for="book">Книга</label>

                <input type="radio" class="btn-check" name="type" id="type3" autocomplete="off">
                <label class="btn btn-outline-primary" for="review">Рецензія</label>
            </div>
            <br />
            <p>Вкажіть, що шукаєте: </p>
            <input type="text" id="searchQuery" />
            <p>Оберіть жанр</p>
            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                @for (int i = 0; i < ViewBag.Genre.Count; i++)
                {
                    <input type="radio" class="btn-check" name="genre" id="btnradio+i" autocomplete="off" checked>
                    <label class="btn btn-outline-primary" for="@ViewBag.Genre[i]">@ViewBag.Genre[i]</label>
                }
            </div>
                <input type="submit" value="Пошук" />
                }
            </div>
            <div class="col">
                @Html.ActionLink("Простий пошук", "Search", null, new { @class = "btn btn-dark" })
            </div>
        </div>

    <div class="loading" style="display:none;">
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">Завантаження...</div>
        </div>
    </div>
    <div id="results">

    </div>
</div>
@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")



