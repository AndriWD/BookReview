
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Рейтинг</h2>
<div class="container">
    <div class="row align-items-start">
        <div class="col">
            @(Ajax.BeginForm("RatingAuthor", new AjaxOptions { UpdateTargetId = "results", LoadingElementId="loading", LoadingElementDuration=500, InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin"}))
            {
            <input type="submit" value="Автори" class="btn btn-outline-primary"/>
            }
        </div>
        <div class="col">
            @(Ajax.BeginForm("RatingBook", new AjaxOptions { UpdateTargetId = "results", LoadingElementId = "loading", LoadingElementDuration = 500, InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin" }))
            {
            <input type="submit" value="Книги" class="btn btn-outline-danger" />
            }
        </div>
        <div class="col">
            @(Ajax.BeginForm("RatingReview", new AjaxOptions { UpdateTargetId = "results", LoadingElementId = "loading", LoadingElementDuration = 500, InsertionMode = InsertionMode.Replace, OnBegin = "OnBegin" }))
            {
            <input type="submit" value="Рецензії" class="btn btn-outline-dark"/>
            }
        </div>
    </div>
    <div class="loading" style="display:none;">
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">Завантаження...</div>
        </div>
    </div>
    <div id="results">

    </div>
</div>
<script type="text/javascript">
    function OnBegin() {
        $("#results").empty();
    }

</script>
@Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")

